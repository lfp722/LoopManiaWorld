<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Select Mode" />
      <!-- clicking button should start/resume the game -->
      <Button fx:id="startGameButton" onAction="#switchToNormalGame" prefHeight="36.0" prefWidth="133.0" text="Normal Mode" />
      <Button mnemonicParsing="false" onAction="#switchToBerserkerGame" prefHeight="35.0" prefWidth="136.0" text="Berserker Mode" />
      <Button mnemonicParsing="false" onAction="#switchToSurvivalGame" prefHeight="36.0" prefWidth="139.0" text="Survival Mode" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>